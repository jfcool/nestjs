{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start API (No Debug)",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
